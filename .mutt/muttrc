##
# MailBox Config {{{
#####

set mbox_type           = Maildir
set mbox                = +mbox
set folder              = ~/mail
set spoolfile           = +INBOX
set header_cache        = ~/.mutt/cache/headers
set message_cachedir    = ~/.mutt/cache/bodies
set record              = +INBOX
set postponed           = +drafts
set maildir_trash       = yes
# }}}

##
# Sender {{{
#####

set realname            = 'Vikas Kanhaua'
set from                = "vik_k@archlinux.us"
set sendmail            = "/usr/bin/msmtp"
# }}}

##
# Misc Opts {{{
#####

set allow_ansi
set menu_scroll
set check_new
set fast_reply
set sig_dashes
set askcc
set delete
set wrap_search
set sendmail_wait       = -1    # don't wait for sending... to complete
set confirmcreate       = yes
set use_from            = yes
set envelope_from       = yes
set edit_headers        = yes
set copy                = yes
set include             = yes
set forward_quote       = yes
set collapse_unread     = yes
set status_chars        = "-*%A"
set editor              = "vim +:silent+?^$"
set ispell              = "aspell -e -c"
set sort                = threads
set sort_aux            = reverse-last-date-received
unset mark_old

# headers to show
ignore *                                          # ignore all headers
unignore from: to: cc: subject:                   # show only these
hdr_order from: to: cc: subject:                  # and in this order
# }}}

##
# Mailboxes & lists {{{
#####

subscribe arch-announce arch-dev-pub arch-general aur-general xmonad mc awesome awesome-devel
mailboxes +INBOX +facebook +arch-general +aur-general +arch-dev-pub +awesome +awesome-devel +arch-announce +mc +xmonad +sent +drafts +spam +trash +archive
# }}}

##
# Enriched messages {{{
#####

auto_view text/html                                               # view html automatically
alternative_order text/plain text/enriched text/html              # save html for last
# }}}

##
# Pager options {{{
#####

set pager_stop                                                  # don't go to next message automatically
set menu_scroll                                                 # scroll in menus
set smart_wrap                                                  # don't split words
set pager_index_lines   = 10                                    # number of index lines to show
set pager_context       = 5                                     # number of context lines to show
set quote_regexp        = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+" # how to spot quote blocks
# }}}

